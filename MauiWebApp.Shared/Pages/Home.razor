@page "/"
@using MauiWebApp.Domain.Expenses
@using MauiWebApp.Shared.Services
@inject IFormFactor FormFactor

<PageTitle>Home</PageTitle>

<Budget Expenses="Expenses" />
<ExpenseList OnExpensesUpdated="ExpensesUpdatedHandler" />


@code {
    private List<ExpenseModel> Expenses = new();
    void ExpensesUpdatedHandler(List<ExpenseModel> expenseModels)
    {
        Expenses = expenseModels;
    }
    private string factor => FormFactor.GetFormFactor();
    private string platform => FormFactor.GetPlatform();
}
